#include "holberton.h"
/**
 * print_number - print integers
 * @n: integers to be tested
 * Return: none
 */
void print_number(int n)
{
unsigned int x;
x = n;
if (n < 0)
{
putchar(45);
x = -n;
}
if (x / 10)
{
print_number(x / 10);
}
putchar((x % 10) + '0');
}
/**
 * reverse_array - reverse array
 * @a: array integer to be reversed
 * @n: integers to be tested
 * Return: none
 */
void reverse_array(int *a, int n)
{
int i = n - 1;
while (i >= 0)
{
int k = a[i];
print_number(k);
if (i != 0)
{
putchar(',');
putchar(' ');
}
i--;
}
}
